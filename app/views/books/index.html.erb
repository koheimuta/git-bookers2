<p id="notice"><%= notice %></p>
<h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h4>name<%= @user.name %></h4>
  <h4>introduction<%= @user.introduction %></h4>
  <p><%= link_to "edit", edit_user_path(@user) %></p>

<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>
<table>
    <thead>
        <tr>
            <th>
              <a href = "edit_user_path" (user.id)></a>
            </th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.user_id %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
        </tr>
        <% end %>
    </tbody>
</table>
