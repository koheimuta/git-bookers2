<h2>Show</h2>
<p id="notice"><%= notice %></p>
<h2>User info</h2>
  <%= image_tag book.user.get_profile_image(100,100) %>
  <h4>name<%= book.user.name %></h4>
  <h4>introduction<%= book.user.introduction %></h4>
  <p><%= link_to "edit", edit_user_path(book.user) %></p>

<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<h2>Book detail</h2>
  <% if @book.user == current_user %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
  <% end %>