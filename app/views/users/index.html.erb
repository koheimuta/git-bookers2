<%= render 'info', user: @user %>

<%= render 'books/newbook', book: @book %>

<h4>Users</h4>
<table>
    <thead>
        <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= image_tag book.user.get_profile_image(100,100) %> </td>
            <td><%= book.user.name %></td>
            <td><%= link_to "Show",user_path(book.user.id) %></td>
        </tr>
        <% end %>
    </tbody>
</table>