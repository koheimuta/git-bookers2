<%= render 'info', user: @user %>

<%= render 'books/newbook', book: @newbook %>

<h4>Books</h4>
<table>
    <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= image_tag book.user.get_profile_image(100,100) %></td>
            <td>
                <%= link_to book_path(@user.id) do %>
                    <%= book.title %>
                <% end %>
            </td>
            <td><%= book.body %></td>
        </tr>
        <% end %>
    </tbody>
</table>